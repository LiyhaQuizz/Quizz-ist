        // D√©claration des √©l√©ments DOM pour pouvoir les manipuler
        const startScreen = document.getElementById('start-screen');
        const nameInput = document.getElementById('name-input');
        const startButton = document.getElementById('start-button');
        const quizContainer = document.getElementById('quiz-container');
        const questionTextElement = document.getElementById('question-text');
        const questionEmojiElement = document.getElementById('question-emoji');
        const answerButtonsElement = document.getElementById('answer-buttons');
        const nextButton = document.getElementById('next-button');
        const feedbackTextElement = document.getElementById('feedback-text');
        const explanationBox = document.getElementById('explanation-box');
        const explanationTextElement = document.getElementById('explanation-text');
        const scoreElement = document.getElementById('score');
        const progressBar = document.getElementById('progress-bar');
        const diplomaContainer = document.getElementById('diploma-container');
        const diplomaNameElement = document.getElementById('diploma-name');
        const finalScoreElement = document.getElementById('final-score');
        const downloadButton = document.getElementById('download-button');
        const restartButtonEnd = document.getElementById('restart-button-end');
        let userName = '';

        // Fonction pour m√©langer un tableau (algorithme de Fisher-Yates)
        function shuffleArray(array) {
            for (let i = array.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [array[i], array[j]] = [array[j], array[i]];
            }
        }

        // Fonction pour d√©marrer le jeu apr√®s avoir entr√© le nom
        startButton.addEventListener('click', () => {
            const name = nameInput.value.trim();
            if (name) {
                userName = name;
                startScreen.classList.add('hidden');
                quizContainer.classList.remove('hidden');
                startGame();
            } else {
                alert("Veuillez entrer votre pr√©nom pour commencer.");
            }
        });

        // Fonction pour d√©marrer ou red√©marrer le jeu
        function startGame() {
            currentQuestionIndex = 0;
            score = 0;
            scoreElement.textContent = score;
            nextButton.classList.add('hidden');
            quizContainer.classList.remove('hidden');
            diplomaContainer.classList.add('hidden');
            showQuestion();
            updateProgressBar();
        }

        // Fonction pour afficher la question et les r√©ponses
        function showQuestion() {
            // R√©initialise les messages et les boutons
            resetState();
            let currentQuestion = questions[currentQuestionIndex];
            questionEmojiElement.textContent = currentQuestion.emoji; // Met √† jour l'√©moji
            questionTextElement.textContent = currentQuestion.question;

            // M√©lange l'ordre des r√©ponses
            shuffleArray(currentQuestion.answers);

            // Cr√©e dynamiquement les boutons de r√©ponse pour la question actuelle
            currentQuestion.answers.forEach(answer => {
                const button = document.createElement('button');
                button.textContent = answer.text;
                button.classList.add(
                    'bg-blue-100', 'text-blue-900', 'font-medium', 'py-3', 'px-4', 'rounded-lg', 'shadow-sm',
                    'hover:bg-blue-200', 'transition-colors', 'duration-200', 'text-left', 'text-sm'
                );
                // Ajoute une classe sp√©ciale si c'est la bonne r√©ponse (pour la v√©rification)
                if (answer.correct) {
                    button.dataset.correct = "true";
                }
                button.addEventListener('click', () => selectAnswer(button, answer));
                answerButtonsElement.appendChild(button);
            });
        }

        // Fonction pour r√©initialiser l'√©tat du jeu avant de montrer une nouvelle question
        function resetState() {
            nextButton.classList.add('hidden');
            feedbackTextElement.textContent = '';
            explanationBox.classList.add('hidden');
            while (answerButtonsElement.firstChild) {
                answerButtonsElement.removeChild(answerButtonsElement.firstChild);
            }
        }

        // Fonction appel√©e quand une r√©ponse est s√©lectionn√©e
        function selectAnswer(selectedButton, answer) {
            const isCorrect = selectedButton.dataset.correct === "true";
            let feedbackColor = 'text-red-600';

            // V√©rifie si la r√©ponse est correcte et met √† jour le score et le feedback
            if (isCorrect) {
                score++;
                scoreElement.textContent = score;
                feedbackTextElement.textContent = "Bonne r√©ponse ! üéâ";
                feedbackColor = 'text-green-600';
            } else {
                feedbackTextElement.textContent = "Mauvaise r√©ponse. üòî";
            }

            // Met √† jour la couleur du texte de feedback
            feedbackTextElement.classList.remove('text-red-600', 'text-green-600');
            feedbackTextElement.classList.add(feedbackColor);
            
            // Affiche l'explication et change la couleur des boutons
            explanationTextElement.textContent = answer.explanation;
            explanationBox.classList.remove('hidden');
            explanationBox.classList.add(isCorrect ? 'bg-green-100' : 'bg-red-100');

            Array.from(answerButtonsElement.children).forEach(button => {
                if (button.dataset.correct === "true") {
                    button.classList.add('bg-green-200', 'text-green-800');
                    button.classList.remove('bg-blue-100');
                } else {
                    button.classList.add('bg-red-200', 'text-red-800');
                    button.classList.remove('bg-blue-100');
                }
                button.disabled = true; // D√©sactive tous les boutons apr√®s la r√©ponse
            });

            // Affiche le bouton "Suivant"
            nextButton.classList.remove('hidden');
        }

        // Fonction pour mettre √† jour la barre de progression
        function updateProgressBar() {
            const progress = ((currentQuestionIndex) / questions.length) * 100;
            progressBar.style.width = `${progress}%`;
        }

        // Fonction pour passer √† la question suivante
        nextButton.addEventListener('click', () => {
            currentQuestionIndex++;
            updateProgressBar();
            if (currentQuestionIndex < questions.length) {
                showQuestion();
            } else {
                showEndScreen();
            }
        });

        // Fonction pour afficher l'√©cran de fin de jeu
        function showEndScreen() {
            quizContainer.classList.add('hidden');
            diplomaContainer.classList.remove('hidden');
            diplomaNameElement.textContent = userName;
            finalScoreElement.textContent = score;
        }

        // Fonction pour t√©l√©charger le dipl√¥me
        downloadButton.addEventListener('click', () => {
            const diplomaCard = document.getElementById('diploma-card');
            html2canvas(diplomaCard).then(canvas => {
                const link = document.createElement('a');
                link.download = `Diplome-Quiz-IST-${userName}.png`;
                link.href = canvas.toDataURL('image/png');
                link.click();
            });
        });

        // √âcouteur pour le bouton de red√©marrage sur l'√©cran de fin
        restartButtonEnd.addEventListener('click', () => {
            diplomaContainer.classList.add('hidden');
            startScreen.classList.remove('hidden');
            nameInput.value = '';
        });
    </script>
